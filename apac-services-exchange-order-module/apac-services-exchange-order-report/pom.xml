<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.cwt.bpg.cbt</groupId>
		<artifactId>apac-services-exchange-order-module</artifactId>
		<version>1.1.0-SNAPSHOT</version>
	</parent>

	<groupId>com.cwt.bpg.cbt</groupId>
	<artifactId>apac-services-exchange-order-report</artifactId>
	<packaging>jar</packaging>

	<name>apac-services-exchange-order-report</name>
	<description>apac-services-exchange-order-report</description>

	<dependencies>
		<dependency>
			<groupId>com.cwt.bpg.cbt</groupId>
			<artifactId>apac-services-exchange-order-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.cwt.bpg.cbt</groupId>
			<artifactId>apac-services-exchange-order-service</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.cwt.bpg.cbt</groupId>
			<artifactId>apac-services-exception</artifactId>
			<version>${project.version}</version>
		</dependency>
		<!--dependency> <groupId>org.freemarker</groupId> <artifactId>freemarker</artifactId> 
			<version>2.3.28</version> </dependency -->
		<dependency>
			<groupId>net.sf.jasperreports</groupId>
			<artifactId>jasperreports</artifactId>
			<version>6.6.0</version>
		</dependency>
		<dependency>
			<groupId>org.codehaus.groovy</groupId>
			<artifactId>groovy</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-mail</artifactId>
		</dependency>
		<dependency>
			<groupId>local.jasperFontOverrides</groupId>
			<artifactId>local.jasperFontOverrides</artifactId>
			<version>1.0</version>
			<scope>system</scope>
			<systemPath>${basedir}/src/main/resources/jasper/font-extension.jar</systemPath>
		</dependency>

	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>${basedir}/src/main/resources</directory>
				<includes>
					<include>/jasper/*.jar</include>
					<include>/jasper/*.jasper</include>
					<include>/jasper/*.jpg</include>
				</includes>
			</resource>
		</resources>
	</build>

	<profiles>
		<profile>
			<id>generate-jasper</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>jasperreports-maven-plugin</artifactId>
						<version>1.0-beta-2</version>
						<configuration>
							<sourceDirectory>src/main/resources/jasper</sourceDirectory>
							<outputDirectory>src/main/resources/jasper</outputDirectory>
						</configuration>
						<executions>
							<execution>
								<phase>compile</phase>
								<goals>
									<goal>compile-reports</goal>
								</goals>
							</execution>
						</executions>

						<dependencies>
							<dependency>
								<groupId>org.codehaus.mojo</groupId>
								<artifactId>jasperreports-maven-plugin</artifactId>
								<version>1.0-beta-2</version>
								<exclusions>
									<exclusion>
										<groupId>jasperreports</groupId>
										<artifactId>jasperreports</artifactId>
									</exclusion>
								</exclusions>
							</dependency>
							<dependency>
								<groupId>net.sf.jasperreports</groupId>
								<artifactId>jasperreports</artifactId>
								<version>6.6.0</version>
								<exclusions>
									<exclusion>
										<groupId>commons-logging</groupId>
										<artifactId>commons-logging</artifactId>
									</exclusion>
								</exclusions>
							</dependency>
							<dependency>
								<groupId>org.codehaus.groovy</groupId>
								<artifactId>groovy-all</artifactId>
								<version>${groovy.version}</version>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>